<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="#fff"
    android:orientation="horizontal" >
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="#fff"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/iv_shouye"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/shouye" />

<TextView
    android:id="@+id/tv_shouye"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="系统首页" />
</LinearLayout>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="#fff"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/iv_mylog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/mylog" />

<TextView
    android:id="@+id/tv_mylog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="我的日志" />
</LinearLayout>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="#fff"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/iv_meg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/meg" />

<TextView
    android:id="@+id/tv_meg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="最新动态" />
</LinearLayout>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="#fff"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/iv_myself"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/myself" />

<TextView
    android:id="@+id/tv_myself"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="个人中心" />
</LinearLayout>


</LinearLayout>
